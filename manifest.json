{
    "manifest_version": 2,
    "name": "btmagd",
    "version": "0.2.0",
    "description": "btmagd下载",
    "browser_action": {
        "default_icon": {
            "19": "icons/icon19.png",
            "38": "icons/icon38.png"
        },
        "default_title": "btmagd"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["https://www.avmoo.com/cn/movie/*", "http://www.javlibrary.com/cn/?v=*"],
        "js": ["js/content.js"]
    }],
    "permissions": [
        "tabs",
        "*://*.btaia.com/*",
        "contextMenus"
    ],
    "author": "chshouyu"
}